{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["deno.ns", "dom"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true
  },
  "importMap": "./import_map.json",
  "lock": false,
  "tasks": {
    "ctx": "deno run -A -r https://raw.githubusercontent.com/paritytech/capi/rune/main.ts --serve",
    "cache": "deno task ctx -- deno cache -r=http://localhost:4646/",
    "star": "deno run -A _tasks/star.ts && deno task cache target/star.ts --check",
    "dev": "deno task ctx -- deno run -A -r=http://localhost:4646/ --watch=static/,routes/ dev.ts"
  },
  "lint": {
    "files": { "include": ["."] },
    "rules": {
      "exclude": [
        "no-empty-interface",
        "no-explicit-any",
        "no-namespace",
        "no-empty",
        "no-extra-semi",
        "ban-types"
      ],
      "tags": ["recommended"]
    }
  }
}
